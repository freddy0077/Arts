<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comm.evergreen.goldwallpapers">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.evergreen.arts.WallpaperDetail"
            android:screenOrientation="portrait"
            android:theme="@style/WallPaperStuffTheme" />
        <activity
            android:name="com.evergreen.arts.DiscActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.evergreen.arts.WallpaperPreview"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_wall_preview"
            android:parentActivityName="com.evergreen.arts.WallpaperDetail"
            android:screenOrientation="portrait"
            android:theme="@style/WallPreviewTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.evergreen.arts.WallpaperDetail" />
        </activity>
        <activity
            android:name="com.evergreen.arts.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.evergreen.arts.MainActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.evergreen.arts.PremiumImageDetail" />
    </application>

</manifest>